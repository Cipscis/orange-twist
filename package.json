{
	"name": "orange-twist",
	"version": "0.1.0",
	"description": "A task management tool designed for my personal style of working.",
	"private": true,
	"type": "module",
	"scripts": {
		"server": "ts-node --esm server/server.ts",
		"buildJs": "concurrently \"tsc --noEmit\" \"ts-node --esm build/build.ts\"",
		"buildCss": "sass app/assets/scss:app/assets/css",
		"build": "concurrently \"npm run buildJs\" \"npm run buildCss\"",
		"watchJs": "concurrently \"tsc --watch --preserveWatchOutput --noEmit\" \"ts-node --esm build/watch.ts\"",
		"watchCss": "sass app/assets/scss:app/assets/css --watch",
		"test": "tsc --noEmit && jest --config=test/jest.config.ts",
		"testWatch": "jest --config=test/jest.config.ts --watch",
		"watch": "concurrently --kill-others \"npm run watchJs\" \"npm run watchCss\" \"npm run testWatch\"",
		"lintJs": "eslint app/assets/js/src/**",
		"lintCss": "stylelint app/assets/scss/**/*.scss",
		"lint": "npm run lintJs && npm run lintCss",
		"start": "concurrently --kill-others \"npm run server\" \"npm run watch\"",
		"prepare": "npm test"
	},
	"author": "Mark Hanna",
	"repository": {
		"type": "git",
		"url": "https://github.com/cipscis/orange-twist.git"
	},
	"license": "Hippocratic-2.1",
	"devDependencies": {
		"@jest/globals": "^29.7.0",
		"@types/express": "^4.17.20",
		"@typescript-eslint/eslint-plugin": "^6.9.0",
		"@typescript-eslint/parser": "^6.9.0",
		"concurrently": "^8.2.2",
		"dotenv": "^16.3.1",
		"esbuild": "^0.19.5",
		"eslint": "^8.52.0",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"express": "^4.18.2",
		"jest": "^29.7.0",
		"sass": "^1.69.5",
		"stylelint": "^15.11.0",
		"stylelint-config-recommended-scss": "^13.0.0",
		"ts-jest": "^29.1.1",
		"ts-jest-resolver": "^2.0.1",
		"ts-node": "^10.9.1",
		"typescript": "^5.2.2"
	},
	"engines": {
		"node": ">=18"
	},
	"dependencies": {
		"classnames": "^2.3.2",
		"marked": "^9.1.2",
		"preact": "^10.18.1",
		"zod": "^3.22.4"
	}
}
