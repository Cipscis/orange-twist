{
	"name": "orange-twist",
	"version": "0.1.0",
	"description": "A task management tool designed for my personal style of working.",
	"private": true,
	"type": "module",
	"scripts": {
		"server": "ts-node --esm server/server.ts",
		"build": "gulp build",
		"watch": "gulp",
		"lintJs": "eslint app/assets/js/src/**",
		"lintCss": "stylelint app/assets/scss/**/*.scss",
		"lint": "npm run lintJs && npm run lintCss",
		"start": "concurrently --kill-others \"npm run server\" \"npm run watch\"",
		"test": "npm run lint && tsc",
		"prepare": "gulp clean && npm test"
	},
	"author": "Mark Hanna",
	"repository": {
		"type": "git",
		"url": "https://github.com/cipscis/orange-twist.git"
	},
	"license": "Hippocratic-2.1",
	"devDependencies": {
		"@types/express": "^4.17.17",
		"@typescript-eslint/eslint-plugin": "^5.57.1",
		"@typescript-eslint/parser": "^5.57.1",
		"concurrently": "^8.0.1",
		"dotenv": "^16.0.3",
		"eslint": "^8.48.0",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"express": "^4.18.2",
		"gulp": "^4.0.2",
		"gulp-sass": "^5.1.0",
		"sass": "^1.61.0",
		"stylelint": "^15.4.0",
		"stylelint-config-recommended-scss": "^9.0.1",
		"ts-loader": "^9.4.2",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.4",
		"webpack": "^5.78.0"
	},
	"engines": {
		"node": ">=18"
	},
	"dependencies": {
		"@types/marked": "^5.0.1",
		"classnames": "^2.3.2",
		"marked": "^5.1.2",
		"preact": "^10.16.0",
		"zod": "^3.22.2"
	}
}
